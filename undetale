import sys
import pygame

pygame.init()
screen = pygame.display.set_mode((800,600))
bg = pygame.image.load('D:\Computer Science\python\block.png')
screen.blit(bg, (0,0))
pygame.display.set_caption("Undertale")
while True:
    for event in pygame.event.get():
        if event.type == QUIT:
            pygame.quit()
            sys.exit()
    
    pygame.display.update()
